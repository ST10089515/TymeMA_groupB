<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/displayCategory2"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/numberOfEntriesLabel"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Entries: "
                app:layout_constraintStart_toStartOf="@+id/displayCategory2"
                app:layout_constraintTop_toBottomOf="@+id/displayCategory2"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/numberOfEntries"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:text="0"
                app:layout_constraintStart_toStartOf="@+id/numberOfEntriesLabel"
                app:layout_constraintTop_toTopOf="@+id/numberOfEntriesLabel" />

            <!-- Add TextView for displaying total hours -->
            <TextView
                android:id="@+id/totalHoursLabel"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Hours: "
                app:layout_constraintStart_toStartOf="@+id/numberOfEntriesLabel"
                app:layout_constraintTop_toBottomOf="@+id/numberOfEntriesLabel"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/totalHours"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:text="0"
                app:layout_constraintStart_toStartOf="@+id/totalHoursLabel"
                app:layout_constraintTop_toTopOf="@+id/totalHoursLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
