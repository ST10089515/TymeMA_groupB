<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="393dp"
            android:layout_height="30dp"
            android:background="#070945"
            app:srcCompat="@drawable/tymema"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="16dp"
            android:contentDescription="@string/todo4" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                app:srcCompat="@drawable/general_search_icon"
                android:contentDescription="@string/todo2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/general_back_icon"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:contentDescription="@string/todo3" />

        </RelativeLayout>

        <Button
            android:id="@+id/buttonCreateCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_category"
            android:onClick="openCreateCategoryActivity"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/buttonCreateTimesheetEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="openCreateTimesheetEntryActivity"
            android:text="@string/create_timesheet_entry" />

        <Button
            android:id="@+id/buttonOpenDisplayTimesheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_display_timesheet_button_text"
            android:onClick="openDisplayTimesheet" />

    </LinearLayout>
</ScrollView>